<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Lilocon\WechatBundle\Repository\WechatUserRepository" name="Lilocon\WechatBundle\Entity\WechatUser">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="openid" type="string" column="openid" length="255" unique="true"/>
    <field name="nickname" type="string" column="nickname" length="255"/>
    <field name="sex" type="smallint" column="sex"/>
    <field name="province" type="string" column="province" length="255"/>
    <field name="country" type="string" column="country" length="255"/>
    <field name="headimgurl" type="string" column="headimgurl" length="255"/>
  </entity>
</doctrine-mapping>
